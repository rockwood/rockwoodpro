<%= semantic_form_for :email, url: [:process_confirmed, :admin, @recording] do |f| %>
  <%= f.inputs do %>
    <%= f.input :deliver, label: "Send email", as: :boolean, input_html: { checked: 'checked' } %>
    <%= f.input :comments, as: :text %>  
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, label: "Confirm Recording" %>
  <% end %>
<% end %>
