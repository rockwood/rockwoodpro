!!! 5
%html{:lang => "en", "xml:lang" => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title Rockwood Productions
    %meta{ "http-equiv" => "X-UA-Compatible", "content" => "IE=edge" }

    = stylesheet_link_tag "application", media: "all"
    = csrf_meta_tags

  %body
    .brand-bar
      .row
        .large-4.columns
          %a{href: root_path}
            %img.logo{src: image_path('logo.png'), alt: "Rockwood Productions"}

        %nav.brand-bar__nav.large-6.columns
          - if current_user
            %a{href: sign_out_path} Sign Out
            %a{href: new_recording_path} Request a Recording
          - else
            %a.main-nav{href: new_user_path} Sign Up

    = render partial: 'shared/flash_messages'
    = yield
    = yield :javascript
