.hero
  .row
    .large-5.columns.large-offset-7
      .panel.panel--within-hero
        .panel__content
          = simple_form_for :session, url: sessions_path do |f|
            = f.input :email, required: true, autofocus: true
            = f.input :password, required: true
            = f.submit "Sign in now"
          %label
            Don't have an account?
            %a{href: new_user_path} Sign up
          %label
            Forgot your password?
            %a{href: new_password_reset_path} Reset it


.row
  .large-4.columns
    .panel.panel--featured
      .panel__content
        %i.icon--large.icon-microphone
        %h3 Highest quality
        %p We use professional equipment and the most advanced recording techniques

  .large-4.columns
    .panel.panel--featured
      .panel__content
        %i.icon--large.icon-cloud-download
        %h3 Digital downloads
        %p All recordings are available as digital downloads at no extra charge! DVDs and CDs are also available.

  .large-4.columns
    .panel.panel--featured
      .panel__content
        %i.icon--large.icon-rocket
        %h3 Fast turnaround
        %p Get your recordings delivered quickly and without hassle.

